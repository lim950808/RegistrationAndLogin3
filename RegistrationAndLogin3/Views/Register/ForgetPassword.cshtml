@model RegistrationAndLogin3.Models.ForgetPassword

@{
    ViewBag.Title = "ForgetPassword";
}

<h2>비밀번호 찾기</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.EmailId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.EmailId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EmailId, "", new { @class = "text-danger" })
                @Html.ValidationMessage("EmailNotExists", new { @class = "text-danger" })
            </div>
        </div>
        <pre>

        </pre>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="비밀번호 찾기" class="btn btn-outline-primary" />
            </div>
        </div>
    </div>
}
<pre>

</pre>
<div>
    @Html.ActionLink("로그인", "Login")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
